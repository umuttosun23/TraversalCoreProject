<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum bırak</h4>
    <p class="mb-4">
        Eposta adresiniz kişi veya kurumlar ile paylaşılmayacak.İşaretli alanlar işaretlendi *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="Message" class="form-control" placeholder="Yorum*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="UserName" class="form-control" placeholder="İsminiz*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationID" value="@ViewBag.ID"  class="form-control" placeholder="Destinasyon ID*"
                       required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
